@inject IJSRuntime JsRuntime
@inject NavigationManager NavigationManager

<MudButton
    Variant="Variant.Outlined"
    Color="Color.Primary"
    @onclick="@(async () => await GoBackAsync())">
    Go Back
</MudButton>

@code {

    [Parameter]
    public string BackPath { get; set; } = null;
    
    private async Task GoBackAsync()
    {
        if (!string.IsNullOrEmpty(BackPath))
        {
            NavigationManager
                .NavigateTo(BackPath);
        }
        else
        {
            await
                JsRuntime
                    .InvokeVoidAsync(
                        "history.go",
                        -1
                    );
        }
    }

}