            AppbarBackground = "#9dcc8e",
            Background = "#e8f9eb",
            Surface = "#fff",
            DrawerBackground="#9dcc8e",
            DrawerText = "#093624"
        },
        PaletteDark = new PaletteDark
        {
            Primary = "#96F7D0",
            Secondary = "#e2f5db",
            Tertiary = "#418171",
            Info = "#18afe1",
            Success = "#3ecb6b",
            Warning = "#feb546",
            Error = "#fe3f60",
            AppbarBackground = "#2c5f30",
            Background = "#051f14",
            Surface = "#093624",
            DrawerBackground="#2c5f30",
            DrawerText = "#ddd"
        }
    };

}