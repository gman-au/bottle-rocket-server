@page "/MyWorkflow/MaxOcr/{workflowId}/AddStep"
@page "/MyWorkflow/MaxOcr/{workflowId}/Steps/{parentStepId}/AddStep"
@page "/MyWorkflow/MaxOcr/{workflowId}/Steps/{stepId}/UpdateStep"
@using Rocket.MaxOcr.Contracts
@using Rocket.MaxOcr.Domain
@inherits Rocket.Web.Host.Infrastructure.BaseSecureCancellableComponent

<UpdateWorkflowStepWrapper
    T="MaxOcrExtractWorkflowStepSpecifics"
    WorkflowStepName="Extract text from image"
    WorkflowId="@WorkflowId"
    ParentStepId="@ParentStepId"
    RequiresConnectorCode="@MaxOcrDomainConstants.ConnectorCode"
    StepId="@StepId"
    Context="stepSpecifics">
    <MudGrid>
        <MudItem sm="12" lg="6">
            <MudText
                type="hidden"
                T="string"
                @bind-Value="stepSpecifics.InputTypeName"
                For="@(() => stepSpecifics.InputTypeName)"/>
        </MudItem>
    </MudGrid>
</UpdateWorkflowStepWrapper>

@code {

    [Parameter]
    public string WorkflowId { get; set; }

    [Parameter]
    public string ParentStepId { get; set; }

    [Parameter]
    public string StepId { get; set; }

}