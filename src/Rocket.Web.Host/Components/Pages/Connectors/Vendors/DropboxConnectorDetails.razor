@page "/MyConnector/Dropbox/{id}"
@using Rocket.Api.Contracts.Connectors
@using Rocket.Web.Host.Api
@using Rocket.Web.Host.Infrastructure
@inject IApiRequestManager ApiRequestManager
@inject IWebHostErrorHandler WebHostErrorHandler
@inject ISnackbar Snackbar
@inherits Rocket.Web.Host.Infrastructure.BaseSecureCancellableComponent

<BottleRocketLoadingOverlay IsLoading="@_isLoading">
    @if (_newModel != null)
    {
        <MudForm
            Model="@_newModel"
            @ref="_form">
            <MudPaper Class="p-4" elevation="2">
                <MudText
                    Align="Align.Center"
                    Typo="Typo.h4"
                    Color="Color.Primary"
                    Class="mb-4">
                    My Dropbox Connector
                </MudText>

                <MudGrid>
                    <MudItem sm="12" lg="6" xl="4">
                        <MudTextField
                            T="string"
                            Label="Connector Name"
                            ReadOnly
                            Disabled
                            Text="@(_newModel.ConnectorName)"
                            OnlyValidateIfDirty/>
                    </MudItem>
                    <MudItem sm="12" lg="6" xl="4">
                        <MudTextField
                            T="string"
                            Label="Connector Type"
                            ReadOnly
                            Disabled
                            Text="@(_newModel.ConnectorType)"
                            OnlyValidateIfDirty/>
                    </MudItem>
                    <MudItem sm="12" lg="6" xl="4">
                        <MudTextField
                            T="string"
                            Label="Date Created"
                            ReadOnly
                            Disabled
                            Text="@(_newModel.CreatedAt?.ToString("g"))"
                            OnlyValidateIfDirty/>
                    </MudItem>
                    <MudItem sm="12" lg="6" xl="4">
                        <MudTextField
                            T="string"
                            Label="Last Updated"
                            ReadOnly
                            Disabled
                            Text="@(_newModel.LastUpdatedAt?.ToString("g"))"
                            OnlyValidateIfDirty/>
                    </MudItem>
                    <MudFlexBreak/>
                    <MudItem sm="12" lg="6" xl="4">
                        <MudTextField
                            T="string"
                            Required="true"
                            Label="Access Token"
                            HelperText="Enter the Dropbox access token"
                            @bind-Value="_newModel.AccessToken"
                            For="@(() => _newModel.AccessToken)"
                            RequiredError="Access token is required"/>
                    </MudItem>
                </MudGrid>
                <MudGrid Class="align-start" Justify="Justify.FlexEnd">
                    <MudItem>
                        <GoBackButton BackPath="/MyConnectors"/>
                    </MudItem>
                    <MudItem>
                        <MudButton
                            Variant="Variant.Outlined"
                            Color="Color.Success"
                            Disabled="@(_isLoading || !_form.IsTouched)"
                            OnClick="@SubmitAsync">
                            Submit
                        </MudButton>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudForm>
    }
</BottleRocketLoadingOverlay>

@code {

    MudForm _form;

    private bool _isLoading;
    private DropboxConnectorDetail _currentModel = null;
    private DropboxConnectorDetail _newModel = null;

    [Parameter]
    public string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await
                base
                    .OnInitializedAsync();

            _isLoading = true;
            StateHasChanged();

            _currentModel =
                await
                    ApiRequestManager
                        .GetDropboxConnectorByIdAsync(
                            Id,
                            BaseCancellationToken
                        );

            _newModel = new DropboxConnectorDetail
            {
                Id = _currentModel.Id,
                ConnectorType = _currentModel.ConnectorType,
                ConnectorName = _currentModel.ConnectorName,
                CreatedAt = _currentModel.CreatedAt,
                LastUpdatedAt = _currentModel.LastUpdatedAt,
                AccessToken = _currentModel.AccessToken,
            };
        }
        catch (Exception ex)
        {
            WebHostErrorHandler
                .HandleException(ex);
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SubmitAsync()
    {
        await
            _form
                .Validate();

        if (_form.IsValid)
        {
            _isLoading = true;
            StateHasChanged();

            try
            {
                var accessToken = _newModel.AccessToken;
                
                await
                    ApiRequestManager
                        .UpdateDropboxConnectorAsync(
                            new DropboxConnectorDetail
                            {
                                Id = _newModel.Id,
                                AccessToken = accessToken,
                            },
                            BaseCancellationToken
                        );

                Snackbar
                    .Add(
                        "The connection has been updated.",
                        Severity.Success
                    );

                    NavigationManager
                        .NavigateTo("/MyConnectors");
            }
            catch (Exception ex)
            {
                WebHostErrorHandler
                    .HandleException(ex);
            }
            finally
            {
                _isLoading = false;
                StateHasChanged();
            }
        }
    }
}